<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/picture_user"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:contentDescription="@string/profile"
                android:scaleType="centerCrop"
                android:src="@drawable/perro" />

            <TextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/picture_user"
                android:paddingStart="4dp"
                android:paddingTop="14dp"
                android:text="@string/profile"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_user"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_user"
                android:layout_marginStart="2dp"
                android:layout_toRightOf="@id/picture_user"
                android:layout_weight="1"
                android:text="@string/usuario"
                android:textSize="10sp"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/tweet_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_user"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/picture_user"
                android:background="@android:color/white"
                android:text="@string/tweet"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/row_view_tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/name_user"
                android:layout_alignStart="@+id/favorite"
                android:text="@string/fecha" />

            <LinearLayout
                android:id="@+id/linear_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/tweet_view"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/picture_user"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/row_view_image1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/perro" />

                    <ImageView
                        android:id="@+id/row_view_image2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/perro" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/row_view_image3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/perro" />

                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">


                        <ImageView
                            android:id="@+id/row_view_image4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/perro"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/row_view_tvForCountImages"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#6000"
                            android:gravity="center"
                            android:text="14+"
                            android:textColor="@android:color/white"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/row_view_rlViewComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/linear_view"
                android:layout_below="@id/linear_view">

                <ImageView
                    android:id="@+id/comentario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_comment" />

                <TextView
                    android:id="@+id/number_of_coments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/comentario" />

                <TextView
                    android:id="@+id/seccion_comentarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/number_of_coments"
                    android:text="@string/comment" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_view"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@id/likes"
                android:src="@drawable/ic_favorite"

                />

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_view"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/seccion_likes"
                android:text="18" />

            <TextView
                android:id="@+id/seccion_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/linear_view"

                android:layout_marginRight="16dp"
                android:text="@string/likes" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>