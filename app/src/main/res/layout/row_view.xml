<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:id="@+id/row_view_ll_detail_activity"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/row_view_iv_picture_user"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:contentDescription="@string/profile"
                android:scaleType="centerCrop"
                android:src="@drawable/perro"/>



                <TextView
                    android:id="@+id/row_view_tv_name_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingTop="14dp"
                    android:text="@string/profile"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/row_view_iv_picture_user"/>

                <TextView
                    android:id="@+id/row_view_tv_username"
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:text="@string/usuario"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:layout_below="@id/row_view_tv_name_user"
                    android:layout_toRightOf="@id/row_view_iv_picture_user"/>




        <TextView
            android:id="@+id/row_view_tv_tweet_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="5dp"
            android:text="@string/tweet"
            android:textSize="12sp"
            android:background="@android:color/white"
            android:layout_below="@id/row_view_tv_username"
            android:layout_toRightOf="@id/row_view_iv_picture_user"/>

        <LinearLayout
            android:id="@+id/row_view_linear_layout_imageview"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/row_view_iv_picture_user"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
                    android:layout_below="@id/row_view_tv_tweet_view"
            android:layout_height="150dp">
            <LinearLayout
                android:id="@+id/row_view_linear_layout_image_up"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/row_view_iv_image1"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:src="@drawable/perro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/row_view_image2"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:src="@drawable/perro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/row_view_linear_layout_down"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/row_view_image3"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/perro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/row_view_image4"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/perro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/row_view_tvForCountImages"
                        android:text="14+"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="#6000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
                <ImageView
                    android:id="@+id/row_view_iv_comentario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment"
                    android:layout_toRightOf="@id/row_view_iv_picture_user"
                    android:layout_below="@id/row_view_linear_layout_imageview"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:id="@+id/row_view_iv_number_of_coments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:layout_below="@id/row_view_linear_layout_imageview"
                    android:layout_toRightOf="@id/row_view_iv_comentario"
                    android:layout_marginLeft="8dp"
                    />

                <TextView
                    android:id="@+id/row_view_tv_seccion_comentarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comment"
                    android:layout_marginStart="5dp"
                    android:layout_below="@id/row_view_linear_layout_imageview"
                    android:layout_toRightOf="@id/row_view_iv_number_of_coments"
                    android:layout_marginLeft="8dp"
                    />


                <ImageView
                    android:id="@+id/row_view_iv_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/row_view_linear_layout_imageview"
                    android:layout_toLeftOf="@id/row_view_tv_likes"

                    />

                <TextView
                    android:id="@+id/row_view_tv_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_below="@id/row_view_linear_layout_imageview"
                    android:layout_toLeftOf="@id/row_view_tv_seccion_likes"
                    />

                <TextView
                    android:id="@+id/row_view_tv_seccion_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/likes"
                    android:layout_marginRight="16dp"

                        android:layout_alignParentRight="true"
                    android:layout_below="@id/row_view_linear_layout_imageview"
                    />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>